<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.elea" >

    <!-- To access Google+ APIs: -->
    <!-- android:icon="@android:drawable/ic_menu_myplaces" -->

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.Elea" >
        <activity
            android:name=".activities.MainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SearchResultListActivity"
            android:label="@string/title_activity_search_result_list" >
        </activity>
        <activity
            android:name=".activities.JobDetailsActivity"
            android:label="@string/title_activity_job_details" >
        </activity>
        <activity
            android:name=".activities.account.UserProfileActivity"
            android:label="@string/title_activity_user_profile" >
        </activity>
        <activity
            android:name=".activities.login.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".activities.login.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".activities.messages.NewMessageActivity"
            android:label="@string/title_activity_new_message" >
        </activity>
        <activity
            android:name=".activities.JobViewActivity"
            android:label="@string/title_activity_job_view" >
        </activity>
        <activity
            android:name=".activities.messages.MessagesMenuActivity"
            android:label="@string/title_activity_messages_menu" >
        </activity>
    </application>

</manifest>
