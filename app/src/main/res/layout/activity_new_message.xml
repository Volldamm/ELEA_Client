<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.elea.activities.messages.NewMessageActivity">

    <TextView
        style="@style/ActivityTitle"
        android:id="@+id/newMessageMainTitle"
        android:text="@string/my_messages_new_message_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/newMessageJobDetails"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_job_details"
        android:layout_toRightOf="@+id/newMessageMainTitle"
        android:layout_marginLeft="5dp"/>


    <TextView
        style="@style/NormalText"
        android:id="@+id/newMessagesSubjectText"
        android:text="@string/my_messages_subject"
        android:layout_below="@+id/newMessageMainTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newMessagesSubjectValue"
        android:layout_below="@+id/newMessagesSubjectText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:width="250dp" />


    <TextView
        style="@style/NormalText"
        android:text="@string/my_messages_message"
        android:id="@+id/newMessagesMessageText"
        android:layout_below="@+id/newMessagesSubjectValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/newMessagesMessageValue"
        android:layout_below="@+id/newMessagesMessageText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        style="@style/NormalTextButton"
        android:id="@+id/btnSendNewMessage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/my_messages_send"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dip" android:paddingRight="15dip"
        android:layout_below="@+id/newMessagesMessageValue"
        android:layout_centerHorizontal="true" />

    <!--Button
        style="@style/NormalTextButton"
        android:id="@+id/btnNewMessageCancel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/my_messages_cancel"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dip" android:paddingRight="15dip"
        android:layout_below="@+id/newMessagesMessageValue"
        android:layout_toRightOf="@+id/btnSendNewMessage"
        android:layout_toEndOf="@+id/btnSendNewMessage"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" /-->

</RelativeLayout>
</ScrollView>